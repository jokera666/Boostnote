      	unlink(LW_LOCAL_PATH . "/actividades2/CerrarPeticiones/galeria/files/".$row['NOMBRE']);
      
      	$sql = "DELETE FROM FOTOS_PETICIONES WHERE ID = '".$idFoto."';";
