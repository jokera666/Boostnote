      	if(!$rs)
      	{
          //si entra en la excepcion se va al catch y se rompe la ejecucion
      		throw new Exception("Error al borrar la foto ", 1);
      		
      	}
      	else
      	{
      		$response = array(
      			'status' => "OK"
      		);
      	}
      
      
      }catch(Exception $e)
      {
        //Recoge el mensaje de error en de la exepcion que ha saltado
      	$response = array(
      		'status' => "KO",
      		'msg' => $e->message
      	);
      }
      
      echo json_encode($response);
      ?>
